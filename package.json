{
  "name": "streamdeck-project",
  "version": "1.0.0",
  "description": "ESP32 Streamdeck Monitor - Complete Project",
  "private": true,
  "workspaces": [
    "app"
  ],
  "scripts": {
    "start": "cd app && npm start",
    "dev": "cd app && npm run electron:dev",
    "build": "cd app && npm run build",
    "install-deps": "npm install && cd app && npm install && cd ../backend && pip install -r requirements.txt",
    "setup": "npm run install-deps",
    "backend": "cd backend && python bluetooth_scanner.py"
  },
  "keywords": ["streamdeck", "esp32", "bluetooth", "electron", "gpio"],
  "author": "Streamdeck Project",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
